html
  include header.pug
  header.center
    div.outer
      div.col.col-12.vt-1
        h1= header
        p= message
  main
    div.outer
      if loggedIn
        div.col.col-6.push-3
          form#search(method='GET', action='/search-results')
            div.input-group
              input#search.field.col.col-9(type='text', name='keyword', placeholder=searchPlaceholder, required)
              input#submit.btn.btn-main.col.col03(type='submit', value=submit)                
    div.outer
      div.col.col-10.center.push-1
        ul.tags.outer
  include footer.pug